  <%= form_with model: @contact, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, 'お名前', class: 'text-success' %>
      <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス', class: 'text-success' %>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, '電話番号', class: 'text-success' %>
      <%= f.telephone_field :phone_number, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :subject, 'タイトル', class: 'text-success' %>
      <%= f.text_field :subject, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :message, 'お問い合わせ内容', class: 'text-success' %>
      <%= f.text_area :message, size: '10x10', class: 'form-control' %>
    </div>

    <div>
      <%= f.submit '入力内容確認', class: "mb-3" %>
    </div>
  <% end %>